{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types",
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
